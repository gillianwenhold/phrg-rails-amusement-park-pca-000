<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @attraction.name %>
</p>

<p>
  <strong>Tickets:</strong>
  <%= @attraction.tickets %>
</p>

<p>
  <strong>Nausea rating:</strong>
  <%= @attraction.nausea_rating %>
</p>

<p>
  <strong>Happiness rating:</strong>
  <%= @attraction.happiness_rating %>
</p>

<p>
  <strong>Min height:</strong>
  <%= @attraction.min_height %>
</p>

<% if @current_user.admin %>
  <%= link_to 'Edit Attraction', edit_attraction_path(@attraction) %>
<% else %>
  <form action="/rides" method="POST">
    <input type="hidden" name="user_id" value="<%= session[:user_id] %>">
    <input type="hidden" name="attraction_id" value="<%= @attraction.id %>">
    <input type="submit" value="Go on this ride">
  </form>
<% end %>

<%= link_to 'Back', attractions_path %>
